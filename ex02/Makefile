################################################################################
###									PROGRAM ###
################################################################################

NAME					=		FightMultHeritance

################################################################################
###									COMPILE ###
################################################################################

CXX						=		c++

################################################################################
###									DIRECTORY ###
################################################################################

OBJ_DIR					=		obj

################################################################################
###									FLAGS	 ###
################################################################################

CFLAGS					=		-std=c++98 -Wall -Wextra -Werror -MMD -MP

################################################################################
###									FILES	 ###
################################################################################

SRC						=		main.cpp ClapTrap.cpp ScavTrap.cpp FragTrap.cpp

OBJ						=		$(SRC:%.cpp=$(OBJ_DIR)/%.o)
DEP						=		$(OBJ:%.o=%.d)

################################################################################
###									ARCHIVES ###
################################################################################

all: $(NAME)

$(NAME): $(OBJ)
			$(CXX) $(CFLAGS) $(OBJ) -o $(NAME)

$(OBJ_DIR)/%.o: %.cpp | $(OBJ_DIR)
			$(CXX) $(CFLAGS) -o $@ -c $<

$(OBJ_DIR):
			mkdir -p $(OBJ_DIR)

-include $(DEP)

re: fclean
			$(MAKE) all

fclean: clean
			rm -f $(NAME)

clean: 
			rm -rf $(OBJ_DIR)

.PHONY: all clean fclean re